<?xml version="1.0" encoding="UTF-8"?>
<!-- Feature Model for a UTP -->
<FeatureModel name="feature model for UTP" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="featureModel-schema.xsd">
   <Features>           
    <Feature name="courses" mandatory="true">
        <!-- Features for managing course -->
        <subFeature>
            <Feature name="course-hierarchy" optional="true"/>
            <Feature name="event" optional="true"/>
        </subFeature>
    </Feature>
    <Feature name="timing" mandatory="true">
        <!-- Timing features for scheduling -->
        <subFeature>
            <Feature name="full-period" optional="true">
            <subFeature>
               <Feature name="single-week" optional="true"/>
            </subFeature>
            </Feature>
            <Feature name="full-week" optional="true"/>
        </subFeature>
    </Feature>
    <Feature name="hosting" mandatory="False">
        <!-- Hosting features with room management options -->
    <subFeature>
        <subFeature type="OR">
            <Feature name="no-room" />
            <Feature name="single-room" />
            <Feature name="multi-room" />
        </subFeature>
        <Feature name="room-capacity" optional="true"/>
        <subFeature type="XOR">
            <Feature name="all-exclusive"/>
            <Feature name="none-exclusive" />
            <Feature name="some-exclusive"/>
        </subFeature>
    </subFeature>
    </Feature>
        <Feature name="teaching" mandatory="False">
        <!-- Teaching features -->
        <subFeature>
        <subFeature type="OR">
            <Feature name="no-teacher" />
            <Feature name="single-teacher" />
            <Feature name="multi-teacher"/>
        </subFeature>
        <Feature name="session-overlap" optional="true"/>
        <Feature name="service" optional="true"/>
        </subFeature>
    </Feature>
    <Feature name="crosscutting" mandatory="true">
        <!-- Features related to across various aspects of the UTP -->
    <subFeature >
        <Feature name="calendar" optional="true"/>
        <Feature name="regularity" optional="true"/>
        <Feature name="orchestration" optional="true"/>
        <Feature name="workload" optional="true"/>
        <Feature name="logistics" optional="true"/>
        <Feature name="resourcing" optional="true"/>
    </subFeature >
   </Feature>
    <Feature name="scheduling" mandatory="true">
        <subFeature>
            <Feature name="no-overlap" optional="true"/>
            <Feature name="same-duration" optional="true"/>
            <Feature name="modular" optional="true"/>
        </subFeature>
    </Feature>
    <Feature name="attending" mandatory="true">
        <!-- Features related to session attendance -->
    <subFeature >
        <Feature name="session-overlap" optional="true"/>
        <Feature name="sectioning" optional="true"/>
    </subFeature >
    </Feature>
</Features> 
<Parameters>
    <Parameter feature="full-period" name="nrPeriods">
        <defaultValue type="number">20</defaultValue>
    </Parameter>
    <Parameter feature="service" name="random">
        <defaultValue type="boolean">false</defaultValue>
    </Parameter>
    <Parameter feature="service" name="serviceMax">
        <defaultValue type="number">192</defaultValue>
    </Parameter>
    <Parameter feature="feature model for UTP" name="nrFormations">
        <defaultValue type="number">0</defaultValue>
    </Parameter>
    <Parameter feature="multi-teacher" name="courseType">
        <defaultValue type="string" options="CM,TD,TP,CMTD">CM</defaultValue>
    </Parameter>
    <Parameter feature="multi-teacher" name="probability">
        <defaultValue type="number" min="0" max="1" step="0.1">0.5</defaultValue>
    </Parameter>
    <Parameter feature="single-teacher" name="courseType">
        <defaultValue type="string" options="CM,TD,TP,CMTD">CM</defaultValue>
    </Parameter>
    <Parameter feature="single-teacher" name="probability">
        <defaultValue type="number" min="0" max="1" step="0.1">0.5</defaultValue>
    </Parameter>
    <Parameter feature="no-teacher" name="courseType">
        <defaultValue type="string" options="CM,TD,TP,CMTD">CM</defaultValue>
    </Parameter>
    <Parameter feature="no-teacher" name="probability">
        <defaultValue type="number" min="0" max="1" step="0.1">0.5</defaultValue>
    </Parameter>
    <Parameter feature="multi-room" name="roomType">
        <defaultValue type="string" options="CM,TD,TP,CMTD">CM</defaultValue>
    </Parameter>
    <Parameter feature="multi-room" name="probability">
        <defaultValue type="number" min="0" max="1" step="0.1">0.5</defaultValue>
    </Parameter>
    <Parameter feature="single-room" name="roomType">
        <defaultValue type="string" options="CM,TD,TP,CMTD">CM</defaultValue>
    </Parameter>
    <Parameter feature="single-room" name="probability">
        <defaultValue type="number" min="0" max="1" step="0.1">0.5</defaultValue>
    </Parameter>
    <Parameter feature="no-room" name="roomType">
        <defaultValue type="string" options="CM,TD,TP,CMTD">CM</defaultValue>
    </Parameter>
    <Parameter feature="no-room" name="probability">
        <defaultValue type="number" min="0" max="1" step="0.1">0.5</defaultValue>
    </Parameter>
</Parameters>
</FeatureModel>